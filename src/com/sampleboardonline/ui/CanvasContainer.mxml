<?xml version="1.0"?>
<s:Group
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

        <fx:Script><![CDATA[
            import com.sampleboardonline.model.models.MainModel;

            [Bindable]
            private var mainModel:MainModel = MainModel.instance;
            ]]></fx:Script>

    <s:Rect width="100%" height="100%">
        <s:fill>
            <s:SolidColor color="0x777777"/>
        </s:fill>
    </s:Rect>

    <s:Group width="{mainModel.projectVO.page.width}"
             height="{mainModel.projectVO.page.height}"
             scaleX="{mainModel.projectZoom}"
             scaleY="{mainModel.projectZoom}"
             verticalCenter="0" horizontalCenter="0">
        <s:Rect width="100%" height="100%">
            <s:fill>
                <s:SolidColor color="white"/>
            </s:fill>
            <s:stroke>
                <s:SolidColorStroke color="0x000000" weight="1"/>
            </s:stroke>
        </s:Rect>

        <s:DataGroup
                width="100%" height="100%"
                dataProvider="{mainModel.projectVO.items}"
                itemRendererFunction="">

        </s:DataGroup>

    </s:Group>

</s:Group>
